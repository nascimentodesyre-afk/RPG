class Local:
    def __init__(self, id_local, recursos, clima, tipo, perigos, posicao):
        self.id_local = id_local
        self.recursos = recursos
        self.clima = clima
        self.tipo = tipo
        self.perigos = perigos
        self.posicao = posicao

    def adicionar_tipo(self, novo_tipo):
        """Adiciona um tipo ao local."""
        pass

    def entrar_local(self, personagem):
        """Permite que um personagem entre no local."""
        pass

    def sair_local(self, personagem):
        """Permite que um personagem saia do local."""
        pass

    def explorar_local(self):
        """Permite a exploração do local."""
        pass

    def interagir_objeto(self, objeto):
        """Permite a interação com um objeto no local."""
        pass
    class Castelo(Local):
        def __init__(self, id_local, recursos, clima, tipo, perigos, posicao, estrutura, seguranca, comodos):
            super().__init__(id_local, recursos, clima, tipo, perigos, posicao)
            self.estrutura = estrutura
            self.seguranca = seguranca
            self.comodos = comodos

class Torre(Local):
    def __init__(self, id_local, recursos, clima, tipo, perigos, posicao, numero_andares, possui_armadilhas):
        super().__init__(id_local, recursos, clima, tipo, perigos, posicao)
        self.numero_andares = numero_andares
        self.possui_armadilhas = possui_armadilhas

    def mudar_de_andar(self):
        """Muda o personagem de andar na torre."""
        pass

    def ativar_armadilhas(self):
        """Ativa as armadilhas da torre."""
        pass

class Caverna(Local):
    def __init__(self, id_local, recursos, clima, tipo, perigos, posicao, escuridao, perigos_ocultos):
        super().__init__(id_local, recursos, clima, tipo, perigos, posicao)
        self.escuridao = escuridao
        self.perigos_ocultos = perigos_ocultos

    def explorar_caverna(self):
        """Inicia a exploração da caverna."""
        pass

    def acender_tocha(self):
        """Acende uma tocha para iluminar a caverna."""
        pass

class Templo(Local):
    def __init__(self, id_local, recursos, clima, tipo, perigos, posicao, energia_mistica, santuario):
        super().__init__(id_local, recursos, clima, tipo, perigos, posicao)
        self.energia_mistica = energia_mistica
        self.santuario = santuario

    def curar_personagem(self):
        """Cura o personagem no templo."""
        pass

    def obter_bencao(self):
        """Concede uma bênção ao personagem."""
        pass

class Floresta(Local):
    def __init__(self, id_local, recursos, clima, tipo, perigos, posicao, periodos, densidade):
        super().__init__(id_local, recursos, clima, tipo, perigos, posicao)
        self.periodos = periodos
        self.densidade = densidade

class Comunidade(Local):
    def __init__(self, id_local, recursos, clima, tipo, perigos, posicao, tamanho, cultura, conflitos, misterios):
        super().__init__(id_local, recursos, clima, tipo, perigos, posicao)
        self.tamanho = tamanho
        self.cultura = cultura
        self.conflitos = conflitos
        self.misterios = misterios