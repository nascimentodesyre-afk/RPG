        """Cria um novo personagem para o jogador."""
        pass

    def selecionar_personagem(self, personagem):
        """Seleciona um personagem existente para jogar."""
        pass

    def iniciar_jogo(self):
        """Inicia o jogo com o personagem selecionado."""
        pass

    def salvar_progresso(self):
        """Salva o progresso atual do jogo."""
        pass

    def carregar_progresso(self):
