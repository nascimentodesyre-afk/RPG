class Item:
    def __init__(self, id_nome, nome, descricao, qualidade, raridade, valor):
        self.id_nome = id_nome
        self.nome = nome
        self.descricao = descricao
        self.qualidade = qualidade
        self.raridade = raridade
        self.valor = valor

    def escolher_nome(self, novo_nome):
        """Escolhe um novo nome para o item."""
        pass

    def usar_item(self, personagem):
        """Usa o item em um personagem."""
        pass
    class Arma(Item):
    def __init__(self, id_nome, nome, descricao, qualidade, raridade, valor, efeitos_especiais, dano, alcance, propriedades):
        super().__init__(id_nome, nome, descricao, qualidade, raridade, valor)
        self.efeitos_especiais = efeitos_especiais
        self.dano = dano
        self.alcance = alcance
        self.propriedades = propriedades

class Pocao(Item):
    def __init__(self, id_nome, nome, descricao, qualidade, raridade, valor, tipo, quantidade):
        super().__init__(id_nome, nome, descricao, qualidade, raridade, valor)
        self.tipo = tipo  # Ex: "cura", "veneno"
        self.quantidade = quantidade

    def beber_pocao(self):
        """Bebe a poção para aplicar seu efeito."""
        pass

    def aplicar_pocao(self, aliado):
        """Aplica a poção em um aliado."""
        pass

class Armadura(Item):
    def __init__(self, id_nome, nome, descricao, qualidade, raridade, valor, protecao, tipo_armadura):
        super().__init__(id_nome, nome, descricao, qualidade, raridade, valor)
        self.protecao = protecao
        self.tipo_armadura = tipo_armadura

    def escolher_tipo_armadura(self):
        """Escolhe o tipo de armadura."""
        pass

class Livro(Item):
    def __init__(self, id_nome, nome, descricao, qualidade, raridade, valor, titulo, conhecimento_contido):
        super().__init__(id_nome, nome, descricao, qualidade, raridade, valor)
        self.titulo = titulo
        self.conhecimento_contido = conhecimento_contido

    def ler(self):
        """Lê o livro para obter conhecimento."""
        pass

    def aprender_habilidade(self):
        """Aprende uma nova habilidade a partir do livro."""
        pass